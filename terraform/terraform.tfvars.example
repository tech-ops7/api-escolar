# Exemplo de configuração das variáveis
# Copie este arquivo para terraform.tfvars e preencha com seus valores

# ID do seu projeto Google Cloud
project_id = "seu-projeto-id"

# Região onde o registry será criado (opcional, padrão: us-central1)
region = "us-central1"

# Zona do Google Cloud (opcional, padrão: us-central1-a)
zone = "us-central1-a"

# Email da service account que terá acesso ao registry e ao bucket do state
# Exemplo: "nome-da-sa@seu-projeto-id.iam.gserviceaccount.com"
service_account_email = "sua-service-account@seu-projeto-id.iam.gserviceaccount.com"

# Nota: Esta service account também terá acesso ao bucket do state do Terraform
# que será criado automaticamente com o nome: terraform-state-api-escolar
